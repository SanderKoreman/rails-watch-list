<h1><%= @list.name %></h1>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <%= bookmark.movie.title %>
      <span>
        <%= link_to "Remove", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure?"} %>
      </span>
    </li>
  <% end %>
</ul>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>

<%= link_to "Back", lists_path, class: "btn btn-primary" %>
